<testing_rules>
  <always>
    <rule>Verify behavior, not implementation</rule>
    <rule>One assertion/failure point per test</rule>
    <rule>Parameterize edge cases</rule>
    <rule>Test happy path AND errors/TypeErrors</rule>
    <rule>Use type hints</rule>
  </always>

  <never>
    <rule>Hardcoded values from program (mocks ok)</rule>
    <rule>Pass tests at any cost - report bugs</rule>
    <rule>Over-mock (â‰¥50% = STOP, alert user)</rule>
    <rule>Mock class under test</rule>
    <rule>Test mocks with mocks</rule>
    <rule>Delete/skip tests without permission</rule>
  </never>

  <mocking>
    <mock>External APIs, DB, filesystem, random</mock>
    <fixture>Complex objects, connections, expensive setups</fixture>
    <real>Pure functions, in-memory, business logic, validation</real>
  </mocking>
</testing_rules>